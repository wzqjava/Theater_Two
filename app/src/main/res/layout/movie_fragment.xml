<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_alignParentTop="true"
        android:src="@mipmap/dianyingbeijing2" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/com_icon_loc_white_default"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_1"
            android:text="北京"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16"
            android:layout_weight="1"/>
        <SearchView
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_24"
            android:id="@+id/search"
            android:background="@drawable/cinema_search"></SearchView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/movie_fragment_relative_one"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textColor="#000000"
                        android:text="热门电影"
                        android:textSize="@dimen/sp_19"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:background="#ae2c3a" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_31"
                        android:layout_marginRight="@dimen/dp_31"
                        android:src="@mipmap/com_icon_next_default" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_fragment_recyclerview_remen"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="@dimen/dp_200"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/movie_fragment_relative_two"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textColor="#000000"
                        android:text="正在上映"
                        android:textSize="@dimen/sp_19"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:background="#ae2c3a" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_31"
                        android:layout_marginRight="@dimen/dp_31"
                        android:src="@mipmap/com_icon_next_default" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_fragment_recyclerview_zhengzai"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="@dimen/dp_200"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/movie_fragment_relative_three"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <TextView
                        android:textColor="#000000"
                        android:text="即将上映"
                        android:textSize="@dimen/sp_19"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_40"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_3"
                        android:background="#ae2c3a" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="@dimen/dp_31"
                        android:layout_marginRight="@dimen/dp_31"
                        android:src="@mipmap/com_icon_next_default" />
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_fragment_recyclerview_jijiang"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_height="@dimen/dp_200"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
