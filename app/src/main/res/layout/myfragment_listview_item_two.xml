<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_50">

    <RelativeLayout
        android:id="@+id/myfragment_two_one"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/myfragment_one_img"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/my_icon_feedback_default" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/myfragment_one_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:text="意见反馈" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/myfragment_two_two"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_22"
            android:background="@mipmap/my_icon_version_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:text="最新版本" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/myfragment_two_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@mipmap/my_icon_logout_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"
            android:text="退出登录" />


    </RelativeLayout>

</LinearLayout>
