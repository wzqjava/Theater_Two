<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_24"
    android:paddingLeft="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/yuanjiao">

    <ImageView
        android:id="@+id/cinema_recomment_user_icon"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/muguang"
        />

    <TextView
        android:id="@+id/cinema_recomment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintLeft_toRightOf="@id/cinema_recomment_user_icon"
        android:text="用户名称"/>

    <TextView
        android:id="@+id/cinema_recomment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/cinema_recomment_user_icon"
        android:text="用户评论"/>

    <TextView
        android:id="@+id/cinema_recomment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/cinema_recomment_text"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="时间"/>

    <CheckBox
        android:id="@+id/cinema_recomment_praise"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toTopOf="@id/cinema_recomment_num"
        app:layout_constraintRight_toLeftOf="@id/cinema_recomment_num"
        android:background="@null"
        android:button="@drawable/hand"
        />
    <TextView
        android:id="@+id/cinema_recomment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cinema_recomment_time"
        android:text="点赞数量"/>

</android.support.constraint.ConstraintLayout>