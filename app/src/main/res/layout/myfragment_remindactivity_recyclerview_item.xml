<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <RelativeLayout
          android:layout_marginTop="@dimen/dp_5"
          android:layout_centerHorizontal="true"
          android:layout_width="@dimen/dp_320"
          android:layout_height="@dimen/dp_100">

            <TextView
                android:id="@+id/myfragment_remind_item_title"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="title"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_18"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myfragment_remind_item_content"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:text="content"
                android:textSize="@dimen/sp_14"
                android:layout_marginTop="@dimen/dp_45"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/myfragment_remind_item_date"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="@dimen/dp_80"
                android:layout_marginLeft="@dimen/dp_205"
                android:text="date"
                android:textSize="@dimen/sp_8"
                android:layout_height="wrap_content" />
            <TextView
                android:background="#838080"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_95"/>
      </RelativeLayout>

</RelativeLayout>

