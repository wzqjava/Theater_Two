<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShelfActivity"
    >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_change"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#0fffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_movie"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_45"
            android:background="@mipmap/com_icon_film_fault"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn_cinema"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:background="@mipmap/com_icon_cinema_default"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/btn_my"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@mipmap/com_icon_my_default"
            android:button="@null"
            android:gravity="center" />

    </RadioGroup>

</RelativeLayout>