<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_28"
            android:src="@mipmap/cinema_detail_icon_location_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_weight="1"
            android:text="北京"
            android:textSize="@dimen/sp_16" />

        <SearchView
            android:id="@+id/classfy_search"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_24"
            android:background="@drawable/cinema_search"></SearchView>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_69"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/classfy_remen"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/cinema_title"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="热门电影"
            android:textColor="@drawable/cinema_title_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/classfy_zhengzai"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/cinema_title"
            android:button="@null"
            android:gravity="center"
            android:text="正在上映"
            android:textColor="@drawable/cinema_title_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/classfy_jijiang"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/cinema_title"
            android:button="@null"
            android:gravity="center"
            android:text="即将上映"
            android:textColor="@drawable/cinema_title_text"
            android:textSize="@dimen/sp_14" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/classfy_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_472"

        android:layout_marginTop="@dimen/dp_102" />

    <ImageView
        android:id="@+id/classfy_fanhui"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_36"
        android:src="@mipmap/com_icon_my_fanhui" />

</RelativeLayout>