<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/ticket_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/ticket_unpay"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:background="@drawable/cinema_title"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="未付款"
            android:textColor="@drawable/cinema_title_text"
            android:textSize="@dimen/sp_14" />

        <RadioButton
            android:id="@+id/ticket_pay"
            android:layout_width="@dimen/dp_83"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_32"
            android:background="@drawable/cinema_title"
            android:button="@null"
            android:gravity="center"
            android:text="已付款"
            android:textColor="@drawable/cinema_title_text"
            android:textSize="@dimen/sp_14" />
    </RadioGroup>

    <android.support.v4.view.ViewPager
        android:id="@+id/ticket_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_40" />

    <ImageView
        android:id="@+id/ticket_back"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_36"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_36"
        android:src="@mipmap/com_icon_my_fanhui" />

</RelativeLayout>